{
    "presets": [
        [
            "@babel/preset-env",
            {
                //"modules": "commonjs",
                "modules": "auto",
                "corejs": { "version": 3, "proposals": true },
                "useBuiltIns": "usage",
                "debug": true
            }
        ],
        "@babel/react"
    ],
    "env": {
        "development": {
            "presets": [
                [
                    "@babel/preset-env",
                    {
                        "useBuiltIns": false
                    }
                ]
            ],
            "plugins": [
                "react-hot-loader/babel"
            ]
        },
        "test": {
            "presets": [
                [
                    "@babel/preset-env",
                    {
                        "debug": false,
                        "useBuiltIns": false,
                        "modules": "commonjs",
                        "targets": {
                            "browsers": [
                                "chrome >= 57"
                            ],
                            "node": 10
                        }
                    }
                ]
            ],
            "plugins": [
                "@babel/plugin-transform-modules-commonjs"
            ]
        }
    },
    "plugins": [
        ["@babel/plugin-transform-runtime",
        {
            "corejs": 3,
            "helpers": true,
            "regenerator": true,
            "useESModules": false
        }],

        "@babel/plugin-syntax-dynamic-import",
        "@babel/plugin-syntax-import-meta",
        "@babel/plugin-proposal-class-properties",
        "@babel/plugin-proposal-json-strings",
        "@babel/plugin-proposal-object-rest-spread"
    ]
}
