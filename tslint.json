{
    "extends": ["tslint:recommended", "tslint-react", "tslint-sonarts", "tslint-config-prettier"],
    "linterOptions": {
        "exclude": ["src/thirdparty/*.js", "**/*.min.js", "**/*.json", "**/svg-icons.tsx"]
    },
    "rules": {
        // For dev-only, assuming uglifyjs will remove them for prod ;)
        "no-console": [true, "console.log", "console.error"],
        // end for dev-only

        // To FIX ISSUES WITH BABEL 7
        // See: https://github.com/babel/babel/issues/7074
        "no-parameter-properties": true,
        "no-empty": [true, "allow-empty-catch", "allow-empty-functions"],
        "no-any": false,
        "no-floating-promises": true,
        "arrow-parens": false,
        "arrow-return-shorthand": [false],
        "comment-format": [true],
        "import-blacklist": [true, "rxjs"],
        "interface-over-type-literal": false,
        "interface-name": false,
        "max-classes-per-file": [true, 2],
        "max-line-length": [true, 120],
        "member-access": false,
        "member-ordering": [
            true,
            {
                "order": "fields-first"
            }
        ],
        "newline-before-return": false,
        "no-empty-interface": false,
        "no-import-side-effect": [
            true,
            {
                //"ignore-module": "(\\.html|\\.css)$",
                "ignore-pattern": "/*.css/"
            }
        ],
        "no-invalid-this": [true, "check-function-in-method"],
        "no-null-keyword": false,
        "no-require-imports": false,
        "no-submodule-imports": [
            true,
            "@src",
            "@config",
            "@data",
            "@assets",
            "history",
            "material-ui",
            "@material-ui",
            "mdi-react",
            "react-burger-menu"
        ],
        "no-this-assignment": [
            true,
            {
                "allow-destructuring": true
            }
        ],
        "no-trailing-whitespace": true,
        "object-literal-sort-keys": false,
        "object-literal-shorthand": false,
        "one-variable-per-declaration": [false],
        "only-arrow-functions": [true, "allow-declarations"],
        "ordered-imports": [false],
        "prefer-method-signature": false,
        "prefer-template": [true, "allow-single-concat"],
        "quotemark": [true, "single", "jsx-double", "avoid-escape"],
        "prefer-for-of": false,
        "triple-equals": [true, "allow-null-check"],
        "type-literal-delimiter": true,
        "typedef": [true],
        //"no-inferrable-types": [true, "ignore-params", "ignore-properties"],
        "no-inferrable-types": [true, "ignore-params"],
        "variable-name": [true, "ban-keywords", "check-format", "allow-pascal-case", "allow-leading-underscore"],
        // tslint-react
        "jsx-no-lambda": false,
        "jsx-boolean-value": ["never"],
        "jsx-no-multiline-js": false,
        // sonar
        "cognitive-complexity": [true, 30],
        "no-duplicate-string": [true, 5],
        "bool-param-default": false
    }
}
